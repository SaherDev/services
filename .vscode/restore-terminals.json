{
  "keepExistingTerminalsOpen": false,
  "runOnStartup": true,
  "terminals": [
    {
      "splitTerminals": [
        {
          "name": "@services/files-service",
          "commands": [
            "source ~/.bash_profile",
            "cd packages/files-service",
            "yarn start:dev"
          ]
        },
        {
          "name": "@services/auth-service",
          "commands": [
            "source ~/.bash_profile",
            "cd packages/auth-service",
            "yarn start:dev"
          ]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "@services/libraray-service",
          "commands": [
            "source ~/.bash_profile",
            "cd packages/library-service",
            "yarn start:dev"
          ]
        }
      ]
    }
  ]
}
